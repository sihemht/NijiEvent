{% extends 'base.html.twig' %}

{% block title %}Books index{% endblock %}

{% block body %}
    <div class="container">
        <div class="col-12">
            <h1>Books
                <a class="btn btn-success" href="{{ path('app_books_new') }}">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-square" viewBox="0 0 16 16">
                        <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z"/>
                        <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4"/>
                    </svg>
                </a>
            </h1>

            <div class="row">
                {% for book in books %}
                    <div class="col-md-4 mb-4">
                        <div class="card" style="width: 100%;">

                            {% if book.imageCover %}
                                <img src="{{ book.imageCover }}" class="card-img-top" alt="{{ book.title }}">
                            {% else %}
                                <img src="/images/6940546.jpg" class="card-img-top" alt="No Cover Available">
                            {% endif %}
                            <div class="card-body">
                                <h5 class="card-title">{{ book.title }}</h5>
                                <p>Authors:
                                    {% for author in book.authors %}
                                        {{ author }},
                                    {% else %}
                                        No authors listed
                                    {% endfor %}
                                </p>
                                <p>Saga: {{ book.saga }}</p>
                                <p>NÂ°{{ book.number }}</p>
                                <a class="btn btn-outline-secondary" href="{{ path('app_books_show', {'id': book.id}) }}">Show</a>
                                <a href="{{ path('app_books_edit', {'id': book.id}) }}" class="btn btn-outline-secondary" role="button">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pen" viewBox="0 0 16 16">
                                        <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001m-.644.766a.5.5 0 0 0-.707 0L1.95 11.756l-.764 3.057 3.057-.764L14.44 3.854a.5.5 0 0 0 0-.708z"/>
                                    </svg>
                                    Edit
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
        <div style="height: 60px;"></div>
    </div>
{% endblock %}
